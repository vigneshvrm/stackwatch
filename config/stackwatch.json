{
  "versions": {
    "prometheus": "v2.53.0",
    "grafana": "11.2.0",
    "node_exporter": "1.8.0",
    "windows_exporter": "0.25.1"
  },
  "images": {
    "prometheus": "docker.io/prom/prometheus",
    "grafana": "docker.io/grafana/grafana",
    "node_exporter": "docker.io/prom/node-exporter"
  },
  "resources": {
    "prometheus": {
      "memory": "4g",
      "cpus": "2"
    },
    "grafana": {
      "memory": "2g",
      "cpus": "2"
    }
  },
  "retention": {
    "prometheus_data_days": 90,
    "prometheus_storage_limit": "50GB",
    "backup_days": 7
  },
  "paths": {
    "prometheus_data": "/var/lib/prometheus",
    "prometheus_config": "/etc/prometheus",
    "grafana_data": "/var/lib/grafana",
    "grafana_config": "/etc/grafana",
    "grafana_provisioning": "/etc/grafana/provisioning",
    "nginx_config": "/etc/nginx/sites-available/stackwatch",
    "nginx_enabled": "/etc/nginx/sites-enabled/stackwatch",
    "web_root": "/var/www/stackwatch/dist",
    "install_dir": "/opt/stackwatch",
    "backup_dir": "/opt/stackwatch/backup",
    "scripts_dir": "/opt/stackwatch/scripts",
    "log_dir": "/var/log/stackwatch"
  },
  "ports": {
    "prometheus": 9090,
    "grafana": 3000,
    "node_exporter": 9100,
    "windows_exporter": 9182,
    "health_api": 8888,
    "http": 80,
    "https": 443
  },
  "prometheus": {
    "scrape_interval": "15s",
    "evaluation_interval": "15s"
  },
  "grafana": {
    "admin_user": "admin",
    "database_type": "sqlite3",
    "database_path": "/var/lib/grafana/data/grafana.db",
    "uid": 472
  },
  "health_check": {
    "interval": "30s",
    "retries": 3,
    "timeout": 60
  },
  "dns": {
    "primary": "8.8.8.8",
    "secondary": "1.1.1.1"
  },
  "nginx": {
    "proxy_connect_timeout": "5s",
    "proxy_read_timeout": "10s"
  }
}
